{
    "manifest_version": 2,
    "name": "To-Do List",
    "description": "A simple to-do list with drag and reorder, bold top item, and archive feature.",
    "version": "1.0",
    "permissions": ["storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "To-Do List"
    }
  }
  